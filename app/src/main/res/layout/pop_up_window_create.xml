<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlueGreen"
    android:elevation="5dp"
    android:orientation="vertical"
    android:theme="@style/Theme.Test100.NoActionBar">

    <ImageView
        android:id="@+id/classes_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_classes_profile"
        app:layout_constraintBottom_toTopOf="@+id/et_class_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/et_class_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/darkBlueGreen"
        android:hint="Class Name"
        android:singleLine="true"
        android:textColor="@color/darkBlueGreen"
        android:textColorHint="@color/darkBlueGreen"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/et_class_section"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classes_image" />

    <EditText
        android:id="@+id/et_class_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/darkBlueGreen"
        android:hint="Class Section"
        android:singleLine="true"
        android:textColor="@color/darkBlueGreen"
        android:textColorHint="@color/darkBlueGreen"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_class_name" />

    <Button
        android:id="@+id/btn_create"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/darkBlueGreen"
        android:text="Create"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_cancel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_class_section" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/darkBlueGreen"
        android:text="Cancel"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_create"
        app:layout_constraintTop_toTopOf="@id/btn_create" />

</androidx.constraintlayout.widget.ConstraintLayout>